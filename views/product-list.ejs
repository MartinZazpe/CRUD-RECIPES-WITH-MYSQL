<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/product-list.css" />

    <title>Document</title>
</head>




<body>
    <%- include("partials/header.ejs") %>
        <main>
            <div class="body-information">
                <section class="introduction">

                    <!-- <div class="search-wrapper">

                        <form action="/recipes/search" method="POST">
                            <label for="search"></label>
                            <input class="search-input" type="search" name="search" id="search">
                            <input type="submit">
                        </form>



                    </div> -->
                    <div>
                        <h3>Check out all of our recipes </h3>
                        <p>Imagine if you had to choose only one recipe ? </p>
                    </div>
                </section>
                <section class="recipe-examples">


                    <div class="container">

                        <% for (let recipe of recipes) {%>
                            <div class="product-container" data-user-cards-container>

                                <div class='imageContainer'>
                                    <a href="/recipes/detail/<%=recipe.id%>"> <img class="recipe-image" src="/images/<%= recipe.image %>"></a>
                                </div>
                                <div class="description-hyperlink">
                                    <h6 class="recipe-title">
                                        <%=recipe.title %>
                                    </h6>
                                    <a class="detail-link noShow" href="/recipes/detail/<%=recipe.id%>">Check out the full recipe...</a>

                                    <% for(let user of allUsers) { %>
                                        <% if(user.email==recipe.belongsTo) {%>
                                            <div class="user-product-container">
                                                <img class="user-product-thumbnail" src="/images/userImages/<%=user.image %>" alt="user-image">
                                                <div class="user-product-container-userDetails">
                                                    <p class="user-product-username">
                                                        <%=user.name %>
                                                    </p>
                                                    <p>Community member</p>
                                                </div>
                                            </div>
                                            <% } %>
                                                <% } %>
                                                    <% if(locals.userLoggedEmail){ %>
                                                        <% if(userLoggedEmail==recipe.belongsTo) {%>
                                                            <div class="buttons">
                                                                <div>
                                                                    <a href="/recipes/edit/<%=recipe.id%>"><button type="submit">Edit</button></a>
                                                                </div>
                                                                <div>
                                                                    <form action="/recipes/delete/<%=recipe.id%>?_method=DELETE" method="POST">
                                                                        <button type="submit" onclick="return confirm('This action canÂ´t be undone, are you sure you want to delete this item?')">
                                                                            Delete
                                                                        </button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                            <% } %>
                                                                <% } %>
                                </div>
                            </div>
                            <% } %>
                    </div>

                    <!-- </section> -->
            </div>
        </main>
        <%- include("partials/footer.ejs") %>

</body>

</html>