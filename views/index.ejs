<!DOCTYPE html>
<html>

<head>
  <title></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <link rel='stylesheet' href='/stylesheets/index.css' />
  <!-- CSS only -->
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" rel="stylesheet" />
  <!-- JavaScript Bundle with Popper -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js"></script>
  <title>Home</title>
</head>

<body>
  <%- include("partials/header.ejs") %>
    <main>
      <div class="body-information">
        <div class="wrapper goBehind">
          <div id="carousel-slider" class="carousel slide carousel-fade" data-ride="carousel" data-interval="5000">
            <!--Indicators-->
            <ol class="carousel-indicators">
              <li class="noShow" data-target="#carousel-slider" data-slide-to="0" class="active"></li>
              <li class="noShow" data-target="#carousel-slider" data-slide-to="1"></li>
              <li class="noShow" data-target="#carousel-slider" data-slide-to="2"></li>
            </ol>
            <!--Indicators-->
            <!--Slides-->
            <div class="carousel-inner" role="listbox">
              <!--First slide-->
              <div class="carousel-item active">
                <img class="d-block w-100" src="https://mdbootstrap.com/img/Photos/Slides/1.webp" alt="First slide">
              </div>
              <!--/First slide-->
              <!--Second slide-->
              <div class="carousel-item">
                <!-- <p class=" d-block w-100"> The most amazing things </p> -->
                <img class=" d-block w-100" src="/images/test3.webp" alt="a chococake">

              </div>
              <!--/Second slide-->
              <!--Third slide-->
              <div class="carousel-item">
                <img class="d-block w-100" src="/images/test2.webp" alt="Third slide">
              </div>
              <!--/Third slide-->
            </div>
          </div>
        </div>
        <section class="introduction">
          <h3>Upload your recipe and share it with the world!</h3>
          <p> or, could have a quote or carrousel of quote from famous chefs</p>
          <p class="cake">&#127856</p>
          </p>
        </section>
        <div class="container">
          <% for(let recipe of recipes) {%>

            <div class="product-container">
              <h4>
                <%=recipe.title %>
              </h4>
              <div class="imageContainer">
                <a href="/recipes/detail/<%=recipe.id%>"><img class="recipe-image" src="/images/<%= recipe.image %>"></a>
              </div>
              <div class="description-hyperlink">
                <p>
                  <%=recipe.description %>
                </p>
                <a class="detail-link" href="/recipes/detail/<%=recipe.id%>">Check out the full recipe...</a>
              </div>
            </div>
            <% } %>
        </div>
      </div>
    </main>
    <%- include("partials/footer.ejs") %>
</body>

</html>